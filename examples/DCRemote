direction = ""
while(direction != 'q'):
        direction = raw_input("Enter direction (w = Forward; s = Backward; a = Left; d = Right): ")
        if (direction == "w"):
                print("Ok, going forward")
        elif (direction == "s"):
                print("Ok, going backward")
        elif (direction == "a"):
                print("Ok, going left")
        elif (direction == "d"):
                print("Ok, going right")
        else:
                print("Direction not recognised.")
